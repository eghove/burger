{{!-- this is the content that gets passed to body in main.handlebars --}}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h1 class="jumbotron d-flex justify-content-center">DEVOUR-DA-BURGER</h1>
            </div>
        </div>
    </div>

    <br />

    {{!-- Burger Image --}}
    <img src="./assets/img/main-burger-image.png" alt="burger image" style="width:200px;height:200px;">

    <br />

    <div class="row">
        <div class="col-md-12">
            <h2>Burgers</h2>
        </div>
    </div>

    <br />

    <div class="row">
        {{!-- Burgers to eat column --}}
        <div class="col-md-5">
            <h3>Burgers to Eat!</h3>

            <ol>
                {{#each burgers}}
                {{#unless this.devoured}}
                <li>
                    <p>Burger Name: {{this.burger_name}}</p>
                    <p>Devoured?: {{this.devoured}} </p>
                    {{> burgers/devour-burger-block}}
                </li>
                {{/unless}}
                {{/each }}
            </ol>
        </div>

        {{!-- Offset column --}}
        <div class="col-md-2">
        </div>


        {{!-- Burgers devoured column --}}
        <div class="col-md-5">
            <h3>Devoured Burgers!</h3>
            <ol>
                {{#each burgers}}
                {{#if this.devoured}}
                <li>
                    <p>Burger Name: {{this.burger_name}}</p>
                    <p>Devoured?: {{this.devoured}} </p>
                </li>
                {{/if}}
                {{/each }}
            </ol>
        </div>

    </div>

    <br />

    {{!-- the form to add burgers --}}
    <form class="add-a-burger">
        <div class="form-group">
            <label for="addBurger">Add a Burger to Eat!</label>
            <textarea class="form-control" id="addBurger" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>

</div>